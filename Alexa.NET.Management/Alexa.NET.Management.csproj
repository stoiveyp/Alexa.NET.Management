<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.6</TargetFramework>
    <Authors>Steven Pears</Authors>
    <Company />
    <Description>A .NET Core library for handling Alexa Skills Management API</Description>
    <PackageLicenseUrl>https://github.com/stoiveyp/Alexa.NET.Management/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/stoiveyp/Alexa.NET.Management/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/stoiveyp/Alexa.NET.Management/</RepositoryUrl>
    <PackageTags>amazon;alexa;echo;dot;echo dot;skills;management</PackageTags>
    <Version>2.0.0</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AssemblyVersion>1.0.10.0</AssemblyVersion>
    <FileVersion>1.0.10.0</FileVersion>
    <PackageReleaseNotes>Add Certification Methods to Skill Management</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Alexa.NET" Version="1.5.1" />
    <PackageReference Include="Refit" Version="4.3.0" />
  </ItemGroup>
</Project>
